@model hairsalon.Models.EnterPasswordVM
@{
    ViewBag.Title = "EnterPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_PartialHeader")


<!-- ======= profile Section ======= -->
<section id="profile" class="profile">
    <div class="container" data-aos="fade-up">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card" style="padding: 20px;">

                    <div class="p-5 pt-0">
                        <form asp-action="EnterPassword" method="post">
                            <div class="mb-3">


                                <label for="passInput">رمز عبور:</label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control rounded-3", @id = "passInput" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })


                            <button value="EnterPassword" class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">ورود به حساب کاربری</input>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section><!-- End profile Section -->
