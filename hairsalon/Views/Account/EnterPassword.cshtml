@model hairsalon.Models.EnterPasswordVM
@{
    ViewBag.Title = "رمز عبور حساب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_PartialHeader")


<!-- ======= profile Section ======= -->
<section id="profile" class="profile">
    <div class="container" data-aos="fade-up">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card" style="padding: 20px;">

                    <div>


                        @using (Html.BeginForm("EnterPassword", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="mb-1">
                                
                                <div class="alert alert-danger alert-dismissible" style="display:@ViewBag.visible">
                                    <strong>خطا در ورود</strong> @ViewBag.error
                                </div>


                                <label for="passInput" class="mb-1">رمز عبور:</label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control rounded-3 " + ViewBag.valid, @id = "passInput" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" }) <br />
                            <div class="mt-1 mb-3">
                                <span style="color: grey">شماره موبایل شما: @Session["PhoneNumber"] </span>
                                @Html.ActionLink("تغییر", "Index", "Account", new { @style = "text-align: center, position: relative" })<br />
                                @Html.ActionLink("کلمه ی عبور را فراموش کرده ام.", "VerifyNumber", "Account")

                            </div>

                                <input value="ورود به حساب کاربری" class="w-100 btn btn-lg rounded-3 btn-primary" type="submit" />

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
</section><!-- End profile Section -->
