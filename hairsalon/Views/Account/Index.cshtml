<!-- ======= profile Section ======= -->
<section id="profile" class="profile">
    <div class="container" data-aos="fade-up">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card" style="padding: 20px;">

                    <div class="p-5 pt-0">
                        <form class="">
                            <div class="mb-3">
                                <label for="mobileInput">شماره موبایل خود را وارد کنید:</label>
                                @*should change*@
                                <input type="tel" class="form-control rounded-3" id="mobileInput" placeholder="مثال: 09123456789">

                            </div>
                            @*should change*@
                            <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">ورود به حساب کاربری</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section><!-- End profile Section -->
